<Window x:Class="Matrox_Camera_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matrox_Camera_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Image Name="ImageCon" Margin="0,0,125,24"/>
        <Button Content=" Grab" Margin="0,184,10,186" Click="Button_Click" HorizontalAlignment="Right" Width="100"/>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBlock Text="영상 그랩 시간 : "/>
            <TextBlock Name="GrabTime"/>
            <TextBlock Text=" ms"/>
            <Border BorderBrush="LightGray" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,2"/>
            <TextBlock Text="이미지 디스플레이 시간 : "/>
            <TextBlock Name="DisplayTime"/>
            <TextBlock Text=" ms"/>
        </StackPanel>
    </Grid>
</Window>
